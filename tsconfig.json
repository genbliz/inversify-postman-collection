{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "strict": true,
    "outDir": "./dist-dev",
    "baseUrl": "./",
    "rootDir": "./src/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
